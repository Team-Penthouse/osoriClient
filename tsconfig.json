{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      "*" : ["*"]
    },
    "plugins": [{
      "name": "typescript-styled-plugin",
      "lint": {
        "validProperties": [
          "aspect-ratio",
          "elevation",
          "margin-vertical",
          "margin-horizontal",
          "padding-horizontal",
          "padding-vertical",
          "resize-mode",
          "shadow-color",
          "shadow-opacity",
          "shadow-offset",
          "shadow-radius",
          "text-align-vertical",
          "tint-color"
        ]
      }
    }]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
